{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "baseUrl": "..",
    "paths": {
      "@repo/store": ["../store"],
      "@repo/slices": ["../slices"]
    }
  },
  "include": ["index.ts", "provider.tsx", "store/store.ts"],
  "exclude": ["node_modules", "dist"]
}
